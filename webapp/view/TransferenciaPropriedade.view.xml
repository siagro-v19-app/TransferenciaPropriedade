<mvc:View controllerName="br.com.idxtecTransferenciaPropriedade.controller.TransferenciaPropriedade"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	height="100%"
	width="100%"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Transferência de Propriedade">
							<t:Table id="tableTransferencia"
								rows="{path: '/TransferenciaPropriedades',
										parameters: {
											expand: 'ProdutoDetails,
											LoteArmazenagemDetails,
											LoteArmazenagemDetails1'
										}
									}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Transferências"/> 
									</Toolbar> 
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Data" sortProperty="Data">
										<Label text="Data"/>
										<t:template>
											<Text text="{
												path : 'Data',
												type : 'sap.ui.model.type.Date',
												formatOptions: {
													style : 'short'
												}}"
												wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="LoteArmazenagemDetails1/Descricao"
									sortProperty="LoteArmazenagemDetails1/Descricao">
										<Label text="Lote de Origem"/>
										<t:template>
											<Text text="{LoteArmazenagemDetails1/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="LoteArmazenagemDetails/Descricao"
									sortProperty="LoteArmazenagemDetails/Descricao">
										<Label text="Lote de Destino"/>
										<t:template>
											<Text text="{LoteArmazenagemDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ProdutoDetails/Descricao"
									sortProperty="ProdutoDetails/Descricao">
										<Label text="Produto"/>
										<t:template>
											<Text text="{ProdutoDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Quantidade" sortProperty="Quantidade">
										<Label text="Quantidade"/>
										<t:template>
											<Text text="{path: 'Quantidade', 
												type: 'sap.ui.model.odata.type.Single',
			                            		formatOptions:{
			                            			decimals: 2,
			                                		decimalSeparator: ','
			                            		}}"
			                            		wrapping="false"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>